<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

	<!-- Loads the properties file -->
	<context:property-placeholder location="classpath:sport.properties" />
    <!-- Define your beans here -->
    <bean id="myFortune" class="com.example.demo.HappyFortuneService"></bean>
    
    <bean id="myCoach" class="com.example.demo.TrackCoach">
    	<!-- set up constructor injection -->
		<constructor-arg ref="myFortune" />
    </bean>
    <bean id="mySecondCoach" class="com.example.demo.BaseballCoach">
    	<!-- set up constructor injection -->
		<constructor-arg ref="myFortune" />
    </bean>
    <bean id="myThirdCoach" class="com.example.demo.FootballCoach">
    	<!-- set up constructor injection -->
		<constructor-arg ref="myFortune" />
    </bean>
    <bean id="myFourthCoach" class="com.example.demo.CricketCoach">
    	<!-- set up setter injection -->
    	<!-- this below is calling the "myFortune" bean as its src -->
    	<property name="fortuneService" ref="myFortune" />
    	<!-- inject literal values (utilizes the foo object found in the PROPERTIES FILE INJECTED ON TOP) -->
    	<property name="email" value="${foo.email}" />
    	<property name="team" value="${foo.team}" />
	</bean>
</beans>





